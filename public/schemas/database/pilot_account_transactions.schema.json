{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "schemas/database/pilot_account_transactions.schema.json",
    "title": "pilot-account-transactions",
    "type": "object",
    "properties": {
        "id": {
          "type": "number",
          "description": "Identifier for the transaction"
        },
        "account_number": {
          "type": "number",
          "description": "The account number"
        },
        "pilot_id": {
          "type": "number",
          "description": "Identifier for the pilot"
        },
        "value": {
          "type": "number",
          "description": "The transaction value"
        },
        "date": {
          "type": "date",
          "description": "Date of the transaction"
        },
        "another_pilot_id": {
          "type": "number",
          "description": "Some other pilot identifier"
        }
    }
}