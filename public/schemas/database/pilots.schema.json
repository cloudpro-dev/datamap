{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/database/pilots.schema.json",
  "title": "pilots",
  "type": "object",
  "properties": {
    "id": {
      "type": "number",
      "description": "Identifier for the pilot"
    },
    "airline_id": {
      "type": "number",
      "description": "Identifier for the airline that the pilot works for"
    },
    "name": {
      "type": "string",
      "description": "The name of the pilot"
    },
    "country": {
      "type": "string",
      "description": "The country of origin for the pilot"
    }
  }
}