{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "schemas/database/pilot_accounts.schema.json",
    "title": "pilot-accounts",
    "type": "object",
    "properties": {
        "id": {
          "type": "number",
          "description": "Identifier for the account"
        },
        "account_number": {
          "type": "number",
          "description": "The account number"
        },
        "pilot_id": {
          "type": "number",
          "description": "Identifier for the pilot"
        },
        "balance": {
          "type": "number",
          "description": "The balance of the account"
        },
        "active": {
          "type": "boolean",
          "description": "Is the account active"
        },
        "last_modified": {
          "type": "date",
          "description": "Last modified date"
        },
        "another_pilot_id": {
          "type": "number",
          "description": "Some other pilot identifier"
        }
    }
}